generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Memory {
  id                      String     @id @default(auto()) @map("_id") @db.ObjectId
  title                   String
  body                    String
  story                   String
  createdAt               DateTime? 
  deletedAt               DateTime? 
